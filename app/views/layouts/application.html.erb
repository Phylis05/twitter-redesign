<!DOCTYPE html>
<html>
  <head>
    <title>TwitterRedesign</title>
     <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"/>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if !logged_in? %>
  <nav class="navbar navbar-expand-lg navbar-light bg-info text-light d-flex flex-row">    
    <div class="collapse navbar-collapse d-flex justify-content-end" >
      <ul class="navbar-nav">
        <li class="nav-item">
            <a>
              <%= link_to "Sign Up", new_user_path,  class: "nav-link text-light"%> 
            </a>
          </li>
        <li class="nav-item">
            <a>
              <%= link_to "Sign In", login_path, class: "nav-link text-light"%> 
            </a>
        </li>    
      </ul>
    </div>
    <% end %>
  </nav
    <%= yield %>
    
  </body>
</html>
