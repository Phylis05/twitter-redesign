
<%= form_for @review, url: reviews_path do |form| %>
  <%= page_error(@review) %>
      <div class="bg-white rounded border p-2">
        <span class="d-block"> WANT TO REVIEW?</span>
        <div class = "d-flex flex-column align-items-start">
          <div class="field w-100">
       
            <%= form.text_area :Text, placeholder: "Compose your review", class: "w-100 p-2" %>
          </div>
          <div class="actions">
            <%= form.submit 'Tweet review', class: "p-2 btn-primary" %>
          </div>
        </div>
      </div>  
<% end %>
