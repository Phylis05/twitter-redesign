<div class = "container-fluid d-flex">
  <div class = "row">
    <div class = "col-2 bg-secondary">
      <aside>
        <%= render 'reviews/sidenav'%>
      </aside>
    </div>
        <div class="col-10 p-0">
          <%= render 'reviews/nav'%> 
          <div class="row m-0">
            <div class = "col-8 p-0">
              <div class = "home-page border-right">
                <div>
                  <div class="">
                    <article>
                      <img src="https://via.placeholder.com/766x250" alt="">
                    </article>
                  <div class="box w-100 bg-light p-3">
                      <h5 class= "border-bottom pb-2">TWEETS<h5>
                        <div class="bg-white p-3 border">
                          <%= form_for (Review.new)  do |f| %>
                            <%= f.text_area :Text, class: "text-input", placeholder: "Compose new tweet" %>
                            <%= f.submit "Tweet", class: "text-btn" %>
                          <% end %>
                        </div>
                        <div class="border p-4 bg-white mt-3">
                        <h4 class="text-primary p-2 border-bottom w-100">ALL TWEETS</h4>
                          <% @reviews.each do |review| if review.author == @user %>
                            <div class="pt-2">   
                              <article class="media">
                                <div class="media-left">
                                  <div class="picture mr-2">
                                    <%= gravatar_for @user, size: 60 %>         
                                  </div>
                                </div>
                                <div class="tweet-content">
                                  <h6><%= review.author.fullname.upcase %></h6>
                                  <span><%= review.Text %></span>
                                </div>
                              </article>
                            </div>
                            <% end %> 
                          <% end %>
                        </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            
            <div class = "col-4 home-page p-4">
              <div class="d-flex flex-column align-items-center justify-content-center">
                <div  class="user-profile">
                  <div class="profile-container">
                      <div class="follow-icon">
                        <% unless current_user.id == @user.id %>
                            <% if current_user.followeds.any? { |person| person.followeds.ids == @user.id }%>
                              <%= link_to unfollow_path(@user), method: :delete, class: "font-unfollow-icon" do %>
                                <i class="fas fa-minus-circle fa-2x"></i>
                              <% end %>
                            <%else%>
                              <%= link_to follow_path(@user), class: "font-follow-icon" do %>
                                <i class="fas fa-plus-circle fa-2x"></i>
                              <% end %>
                            <% end %>
                        <% end %>
                        <div class="picture">
                          
                            <%= gravatar_for @user, size: 100 %>
                         
                        </div>
                        
                      </div>
                         <div class="profile-details text-center">
                          <h5><%= @user.fullname.upcase %></h5>
                          <h6>@<%= @user.username %></h6>
                        </div> 
                      </div>
                      <div class="row d-flex border m-3 text-center">
                        <div class = "col-4 border-right pt-2">
                          <span><%= @user.reviews.count%></span>
                          <p>Tweets</p>
                        </div>
                        <div class = "col-4 border-right pt-2">
                          <span><%= @user.followers.count%></span>
                          <p>Following</p>
                        </div>
                        <div class="col-4 pt-2">
                          <span><%= @user.followeds.count%></span>
                          <p>Followers</p>
                        </div>
                      </div>
                <div>
              <div>
              <h6 class="border-bottom p-2">FOLLOWED BY</h6>
                  <% Following.all.each do |follower| if follower.id != current_user.id %>
                    <div class="text-center mt-2">
                        <% if current_user.followers.any? { |person| person.followed_ids == follower.follower.id }%>
                          <h6><%= follower.follower.fullname  %></h6>
                            <%= link_to unfollow_path(follower.follower), method: :delete, class: "follow-icons" do %>
                               <i class="fas fa-minus-circle fa-2x"></i>
                            <% end %>
                        <% end %>
                    </div>
                  <% end %>
                   <%end%>
              </div>
            </div>  
          </div>     
  </div>
</div>